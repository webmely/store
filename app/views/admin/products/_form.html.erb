<%= form_for(@product, :html => { :role => "form" }) do |f| %>
<div class="row">
	<div class="col-md-8">
		<div id="panel-1" class="panel panel-default">
			<div class="panel-heading">
				<span class="title elipsis">
					<strong>CLEAN TABLE</strong> <!-- panel title -->
				</span>

				<!-- right options -->
				<ul class="options pull-right list-inline">
					<li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="Colapse" data-placement="bottom"></a></li>
				</ul>
				<!-- /right options -->

			</div>

			<!-- panel content -->
			<div class="panel-body">
				<div class="form-group">
					<label class="control-label">Product Name</label>
					<%= f.text_field :name, class: "form-control", placeholder: "Product Name" %>
				</div>
				<div class="form-group">
					<div class="row">
						<div class="col-md-6 col-sm-6">
							<label class="control-label">Price</label>
							<%= f.text_field :price, class: "form-control", placeholder: "Price" %>
						</div>
						<div class="col-md-6 col-sm-6">
							<label class="control-label">Price Current</label>
							<%= f.text_field :price_current, class: "form-control", placeholder: "Price Current" %>
						</div>
					</div>
				</div>

				<div class="form-group">
					<label class="control-label">Description</label>
					<%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description" %>
				</div>

				<script>
					$(function() {
						$('#product_description').froalaEditor()
					});
				</script>
			</div>
		</div>

		<div id="panel-1" class="panel panel-default">
			<div class="panel-heading">
				<span class="title elipsis">
					<strong>Short escription</strong> <!-- panel title -->
				</span>

				<!-- right options -->
				<ul class="options pull-right list-inline">
					<li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="Colapse" data-placement="bottom"></a></li>
				</ul>
				<!-- /right options -->

			</div>

			<!-- panel content -->
			<div class="panel-body">
				<div class="form-group">
					<div class="fancy-form">
						<%= f.text_area :short_description, rows: 5, class: "form-control word-count", "data-info" => "textarea-words-info", placeholder: "Short Description" %>
						<i class="fa fa-comments"><!-- icon --></i>
						<span class="fancy-hint size-11 text-muted">
							<strong>Hint:</strong> 200 words allowed!
							<span class="pull-right">
								<span id="textarea-words-info">0/200</span> Words
							</span>
						</span>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<div id="submitdiv" class="panel panel-default">
			<div class="panel-heading">
				<span class="title elipsis">
					<strong>Edit Product</strong> <!-- panel title -->
				</span>

				<!-- right options -->
				<ul class="options pull-right list-inline">
					<li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="Colapse" data-placement="bottom"></a></li>
				</ul>
				<!-- /right options -->

			</div>

			<!-- panel content -->
			<div class="panel-body">
				Abc
			</div>

			<div class="panel-footer">
				<div class="margiv-top10">
					<%= button_tag(type: 'submit', class: "btn btn-primary") do %>
					<i class="fa fa-check"></i> Save Changes
					<% end %>
					<%= button_tag(type: 'reset', class: "btn btn-default") do %>
					<i class="fa fa-undo"></i> Reset
					<% end %>
				</div>
			</div>
		</div>

		<div id="panel-2" class="panel panel-default">
			<div class="panel-heading">
				<span class="title elipsis">
					<strong>Thumbnail</strong> <!-- panel title -->
				</span>

				<!-- right options -->
				<ul class="options pull-right list-inline">
					<li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="Colapse" data-placement="bottom"></a></li>
				</ul>
				<!-- /right options -->

			</div>

			<!-- panel content -->
			<div class="panel-body">
				<div class="form-group">
					<%= image_tag @product.thumbnail.thumb_sm.url, :class => "img-responsive"%>
					<br/><br/>
					<%= f.file_field :thumbnail, class: "custom-file-upload", "data-btn-text" => "Select a File"%>
					<small class="text-muted block">Max file size: 10Mb (zip/pdf/jpg/png)</small>
				</div>
			</div>
		</div>
	</div>
</div>
<%end%>