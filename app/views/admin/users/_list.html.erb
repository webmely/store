<div class="list-products table-responsive">
	<table class="table table-bordered table-vertical-middle nomargin">
		<thead>
			<tr>
				<th>Avatar</th>
				<th>Full name</th>
				<th>Email</th>
				<th>Phone</th>
				<th>Address</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |u|%>
			<tr>
				<td><%= image_tag u.avatar.url, :class => "product-thumb img-responsive"%></td>
				<td><%= u.fullname%></td>
				<td><%= u.email %></td>
				<td><%= u.phone %></td>
				<td><%= u.address %></td>
				<td>
					<%= link_to edit_admin_user_path(u), class: "btn btn-default btn-xs", target: "_parent"  do%>
						<i class="fa fa-edit white"></i> Edit
					<% end %>
					<%= link_to admin_user_path(u), method: "DELETE", class: "btn btn-default btn-xs", target: "_parent"  do%>
						<i class="fa fa-times white"></i> Delete
					<% end %>
				</td>
			</tr>
			<%end%>
		</tbody>
	</table>
</div>