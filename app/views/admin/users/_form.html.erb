<%= form_for(@user, :html => { :role => "form" }) do |f| %>
<div class="row">
	<div class="col-md-8">
		<div id="panel-1" class="panel panel-default">
			<div class="panel-heading">
				<span class="title elipsis">
					<strong>CLEAN TABLE</strong> <!-- panel title -->
				</span>

				<!-- right options -->
				<ul class="options pull-right list-inline">
					<li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="Colapse" data-placement="bottom"></a></li>
				</ul>
				<!-- /right options -->

			</div>

			<!-- panel content -->
			<div class="panel-body">
				<div class="form-group">
					<label class="control-label">Full Name</label>
					<%= f.text_field :fullname, class: "form-control", placeholder: "Full Name" %>
				</div>
				<div class="form-group">
					<label class="control-label">Mail</label>
					<%= f.email_field :email, class: "form-control", placeholder: "Mail Address" %>
				</div>
				<div class="form-group">
					<div class="row">
						<div class="col-md-6 col-sm-6">
							<label class="control-label">Password</label>
							<%= f.text_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
						</div>
						<div class="col-md-6 col-sm-6">
							<label class="control-label">Re-type Password</label>
							<%= f.text_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Re-type Password" %>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label">Phone Number</label>
					<%= f.text_field :phone, class: "form-control", placeholder: "Phone Number" %>
				</div>
				<div class="form-group">
					<label class="control-label">Address</label>
					<%= f.text_field :address, class: "form-control", placeholder: "Address" %>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<div id="submitdiv" class="panel panel-default">
			<div class="panel-heading">
				<span class="title elipsis">
					<strong>Edit Product</strong> <!-- panel title -->
				</span>

				<!-- right options -->
				<ul class="options pull-right list-inline">
					<li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="Colapse" data-placement="bottom"></a></li>
				</ul>
				<!-- /right options -->

			</div>

			<!-- panel content -->
			<div class="panel-body">
				Abc
			</div>

			<div class="panel-footer">
				<div class="margiv-top10">
					<%= button_tag(type: 'submit', class: "btn btn-primary") do %>
					<i class="fa fa-check"></i> Save Changes
					<% end %>
					<%= button_tag(type: 'reset', class: "btn btn-default") do %>
					<i class="fa fa-undo"></i> Reset
					<% end %>
				</div>
			</div>
		</div>

		<div id="panel-2" class="panel panel-default">
			<div class="panel-heading">
				<span class="title elipsis">
					<strong>Thumbnail</strong> <!-- panel title -->
				</span>

				<!-- right options -->
				<ul class="options pull-right list-inline">
					<li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="Colapse" data-placement="bottom"></a></li>
				</ul>
				<!-- /right options -->

			</div>

			<!-- panel content -->
			<div class="panel-body">
				<div class="form-group">
					<%= image_tag @user.avatar.url, :class => "img-responsive"%>
					<br/><br/>
					<%= f.file_field :avatar, class: "custom-file-upload", "data-btn-text" => "Select a File"%>
					<small class="text-muted block">Max file size: 10Mb (zip/pdf/jpg/png)</small>
				</div>
			</div>
		</div>
	</div>
</div>
<%end%>