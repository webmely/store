<table class="table table-bordered table-hover table-striped">
 <caption>All of Users</caption>
 <thead>
  <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Action</th>
        </tr>
 </thead>
 <tbody>
 <% @users.each do |u|%>
	 <tr>
		<td><%= u.id%></td>
		<td><%= u.fullname%></td>
		<td><%= u.email%></td>
		<td><%= u.address%></td>
		<td><%= u.phone%></td>
		<td width='100px'>
			<%= link_to edit_user_path(u), :class => "btn btn-info btn-sm" do%>
			<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>
			<%end%>
			<%= link_to user_path(u), :class => "btn btn-danger btn-sm",:method => "DELETE" do%>
			<span class='glyphicon glyphicon-trash' aria-hidden='true'></span>
			<%end%>
		</td>
	</tr>
<%end%>
</tbody>
</table>